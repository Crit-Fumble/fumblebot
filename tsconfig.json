{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@crit-fumble/fumblebot-db": ["./packages/fumblebot-db/dist/index.d.ts"],
      "@crit-fumble/fumblebot-proxy": ["./packages/fumblebot-proxy/dist/index.d.ts"],
      "@crit-fumble/fumblebot-auth": ["./packages/fumblebot-auth/dist/index.d.ts"],
      "@crit-fumble/fumblebot-api": ["./packages/fumblebot-api/dist/index.d.ts"],
      ".prisma/fumblebot": ["./packages/fumblebot-db/node_modules/.prisma/fumblebot"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "packages", "**/*.test.ts", "**/*.spec.ts", "src/WIP/**/*", "src/activity/**/*"]
}
